{{#each this}}
  {{!-- <a class="movie-card-link" href='https://image.tmdb.org/t/p/w500{{backdrop_path}}'> --}}
  <div class='movie-card'>
    <img
      class='movie-poster'
      src='https://image.tmdb.org/t/p/w500{{poster_path}}'
      alt='{{title}}{{name}}'
      data-id='{{id}}'
      onerror="this.onerror=null;this.src='https://sd.keepcalms.com/i-w600/keep-calm-poster-not-found.jpg';"
      loading='lazy'
    />
    <div class='info'>
      <h2 class='movie-title'>
        {{title}}{{name}}
      </h2>
      <p class='movie-info'>
        {{!-- {{genre_ids}} --}}
        {{!-- {{#each genres}}
                {{name}}
            {{/each}} --}}
        |
        {{release_date}}{{first_air_date}}
      </p>
    </div>
  </div>
  {{! </a> }}
{{/each}}